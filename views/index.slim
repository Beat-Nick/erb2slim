/.container-fluid
form#convert method="post"
	/text area
	.div.col-md-10.fill
		/Raw Text
		.col-md-6
			h4 HTML or ERB 
			hr
			.row.cm
				textarea#raw_text name="raw_text"
		
		/Converted Text
		.col-md-6
			h4 Converted Text
			hr
			.row.cm
				textarea#final 	
		
		/Footer
		- sites =   {html2slim: "https://github.com/slim-template/html2slim",
				 	 html2haml: "https://github.com/haml/html2haml",
				 	 haml2slim: "https://github.com/slim-template/haml2slim"}
		.col-md-12.footer
			.footer-text
				- sites.each_with_index do |(value,link), index|
					a href="#{link}" #{value}
					
					-if index != sites.size - 1
