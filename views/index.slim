/.container-fluid
form#convert method="post"
	.row
		.col.s10
			.row
				/Raw Text
				.col.s6
					h4 HTML or ERB 
					hr
					.row.cm
						textarea#raw_text name="raw_text"
				
				/Converted Text
				.col.s6
					h4 Converted Text
					hr
					.row.cm
						textarea#final 	

			/Footer
			.col.s12.footer
					- sites.each_with_index do |(value,link), index|
						a href="#{link}" #{value}
						-if index != sites.size - 1
							span.bullet â€¢

		/Side-bar
		.col.s2.side-bar	
			hr
			h5 Pick Conversion Type
			hr
			-conversions.each do |conversion_method|
				p
					input.with-gap type="radio" id="#{conversion_method}" name="conversion_type" value="#{conversion_method}"
					label for="#{conversion_method}" #{conversion_method}

			hr
			h5 Advanced options
			hr
			-advoptions.each do |opt,txt|
			 	p
			 		input.filled-in type="checkbox" name="#{opt}" id="#{opt}" value="true" 
			 		label for="#{opt}" #{txt}

			hr
		 	button.btn.btn-default.btn-block type="submit" Convert
		 	hr

		 	a.btn.btn-default.side-bar-button href="https://github.com/froshroom/erb2slim"
		 		span class="gh-text" id="gh-text" Source
			 	span class="gh-ico" aria-hidden="true"

